{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": ["**/*.ts"],
    "watchAssets": true
  },
  "language": "ts",
  "projects": {
    "default": {
      "type": "application",
      "root": "src",
      "entryFile": "main",
      "tsConfigPath": "tsconfig.build.json",
      "compilerOptions": {
        "webpack": false,
        "webpackPath": null,
        "tsConfigPath": "tsconfig.build.json"
      }
    }
  }
}